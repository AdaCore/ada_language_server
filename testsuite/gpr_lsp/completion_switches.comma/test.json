[
   {
      "comment": [
         "Test completion of tool switches after comma in Default_Switches",
         " with both completion trigger kinds (trigger character on space, and without)"
      ]
   },
   {
      "start": {
         "cmd": ["${ALS}", "--language-gpr"]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "capabilities": {},
               "rootUri": "$URI{.}"
            },
            "id": 1,
            "method": "initialize"
         },
         "wait": [
            {
               "id": 1,
               "result": {
                  "capabilities": {
                     "textDocumentSync": {
                        "openClose": true,
                        "change": 1
                     },
                     "completionProvider": {}
                  }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "text": "project Default is\n  package Compiler is\n    for Default_Switches (\"ada\") use (\"-O2\", \n  end Compiler;\n\n  package Prove is\n    for Default_Switches (\"ada\") use (\"--mode=prove\", \n  end Prove;\nend Default;\n",
                  "version": 0,
                  "uri": "$URI{default.gpr}",
                  "languageId": "Gpr"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 2,
            "method": "textDocument/completion",
            "params": {
               "textDocument": {
                  "uri": "$URI{default.gpr}"
               },
               "position": {
                  "line": 2,
                  "character": 46
               },
               "context": {
                  "triggerKind": 2,
                  "triggerCharacter": " "
               }
            }
         },
         "wait": [
            {
               "id": 2,
               "result": {
                  "isIncomplete": false,
                  "items": [
                     "<HAS>",
                     {
                        "detail": "gnat",
                        "documentation": "Ada 2005 mode",
                        "insertText": "\"-gnat2005\"",
                        "kind": 12,
                        "label": "-gnat2005"
                     },
                     {
                        "detail": "gnat",
                        "documentation": "Ada 2022 mode",
                        "insertText": "\"-gnat2022\"",
                        "kind": 12,
                        "label": "-gnat2022"
                     },
                     {
                        "detail": "gnat",
                        "documentation": "Set mode for general/assertion expressions separately",
                        "insertText": "\"-gnato${1:??}\"$0",
                        "insertTextFormat": 2,
                        "kind": 12,
                        "label": "-gnato??"
                     }
                  ]
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 3,
            "method": "textDocument/completion",
            "params": {
               "textDocument": {
                  "uri": "$URI{default.gpr}"
               },
               "position": {
                  "line": 2,
                  "character": 45
               },
               "context": {
                  "triggerKind": 1
               }
            }
         },
         "wait": [
            {
               "id": 3,
               "result": {
                  "isIncomplete": false,
                  "items": [
                     "<HAS>",
                     {
                        "detail": "gnat",
                        "documentation": "Ada 2012 mode (default)",
                        "insertText": "\"-gnat2012\"",
                        "kind": 12,
                        "label": "-gnat2012"
                     },
                     {
                        "detail": "gnat",
                        "documentation": "Suppress all checks",
                        "insertText": "\"-gnatp\"",
                        "kind": 12,
                        "label": "-gnatp"
                     }
                  ]
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 4,
            "method": "textDocument/completion",
            "params": {
               "textDocument": {
                  "uri": "$URI{default.gpr}"
               },
               "position": {
                  "line": 6,
                  "character": 62
               },
               "context": {
                  "triggerKind": 2,
                  "triggerCharacter": " "
               }
            }
         },
         "wait": [
            {
               "id": 4,
               "result": {
                  "isIncomplete": false,
                  "items": [
                     "<HAS>",
                     {
                        "detail": "gnatprove",
                        "kind": 12,
                        "label": "--report=r"
                     },
                     {
                        "detail": "gnatprove",
                        "kind": 12,
                        "label": "--warnings=w"
                     }
                  ]
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 5,
            "method": "textDocument/completion",
            "params": {
               "textDocument": {
                  "uri": "$URI{default.gpr}"
               },
               "position": {
                  "line": 6,
                  "character": 61
               },
               "context": {
                  "triggerKind": 1
               }
            }
         },
         "wait": [
            {
               "id": 5,
               "result": {
                  "isIncomplete": false,
                  "items": [
                     "<HAS>",
                     {
                        "detail": "gnatprove",
                        "kind": 12,
                        "label": "--clean"
                     },
                     {
                        "detail": "gnatprove",
                        "kind": 12,
                        "label": "--output=o"
                     }
                  ]
               }
            }
         ]
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
