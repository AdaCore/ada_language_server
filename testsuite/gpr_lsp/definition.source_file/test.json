[
   {
      "comment": [
         "test textDocument/definition for source file mentions in Main attribute"
      ]
   },
   {
      "start": {
         "cmd": ["${ALS}", "--language-gpr"]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "capabilities": {},
               "rootUri": "$URI{.}"
            },
            "jsonrpc": "2.0",
            "id": 1,
            "method": "initialize"
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "id": 1,
               "result": {
                  "capabilities": {
                     "textDocumentSync": {
                        "openClose": true,
                        "change": 1
                     }
                  }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "uri": "$URI{myproject.gpr}",
                  "languageId": "Gpr",
                  "version": 1,
                  "text": "with \"imported\";\n\nproject MyProject is\n\n   for Source_Dirs use (\"src\");\n   for Main use (\"main.adb\", \"helper.adb\", \"tool.adb\");\n   for Object_Dir use \"obj\";\n   for Exec_Dir use \"../bin\";\n\n   package Builder is\n      for Executable (\"main.adb\") use \"my_main\";\n   end Builder;\n\nend MyProject;"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen"
         },
         "wait": []
      }
   },
   {
      "comment": [
         "Go to definition on 'main.adb' in Main attribute (line 5, character 17)"
      ]
   },
   {
      "send": {
         "request": {
            "params": {
               "position": {
                  "line": 5,
                  "character": 17
               },
               "textDocument": {
                  "uri": "$URI{myproject.gpr}"
               }
            },
            "jsonrpc": "2.0",
            "id": 100,
            "method": "textDocument/definition"
         },
         "wait": [
            {
               "id": 100,
               "result": {
                  "range": {
                     "start": {
                        "line": 0,
                        "character": 0
                     },
                     "end": {
                        "line": 0,
                        "character": 0
                     }
                  },
                  "uri": "$URI{src/main.adb}"
               }
            }
         ]
      }
   },
   {
      "comment": [
         "Go to definition on 'helper.adb' in Main attribute (line 5, character 31)"
      ]
   },
   {
      "send": {
         "request": {
            "params": {
               "position": {
                  "line": 5,
                  "character": 31
               },
               "textDocument": {
                  "uri": "$URI{myproject.gpr}"
               }
            },
            "jsonrpc": "2.0",
            "id": 101,
            "method": "textDocument/definition"
         },
         "wait": [
            {
               "id": 101,
               "result": {
                  "range": {
                     "start": {
                        "line": 0,
                        "character": 0
                     },
                     "end": {
                        "line": 0,
                        "character": 0
                     }
                  },
                  "uri": "$URI{src/helper.adb}"
               }
            }
         ]
      }
   },
   {
      "comment": [
         "Go to definition on 'tool.adb' from imported project in Main attribute (line 5, character 45)"
      ]
   },
   {
      "send": {
         "request": {
            "params": {
               "position": {
                  "line": 5,
                  "character": 45
               },
               "textDocument": {
                  "uri": "$URI{myproject.gpr}"
               }
            },
            "jsonrpc": "2.0",
            "id": 102,
            "method": "textDocument/definition"
         },
         "wait": [
            {
               "id": 102,
               "result": {
                  "range": {
                     "start": {
                        "line": 0,
                        "character": 0
                     },
                     "end": {
                        "line": 0,
                        "character": 0
                     }
                  },
                  "uri": "$URI{imported/tool.adb}"
               }
            }
         ]
      }
   },
   {
      "comment": [
         "Go to definition on 'obj' directory path in Object_Dir attribute (line 7, character 25)",
         "This should not return an error, just null/empty result"
      ]
   },
   {
      "send": {
         "request": {
            "params": {
               "position": {
                  "line": 7,
                  "character": 25
               },
               "textDocument": {
                  "uri": "$URI{myproject.gpr}"
               }
            },
            "jsonrpc": "2.0",
            "id": 103,
            "method": "textDocument/definition"
         },
         "wait": [
            {
               "id": 103,
               "result": []
            }
         ]
      }
   },
   {
      "comment": [
         "Go to definition on '../bin' relative path in Exec_Dir attribute (line 8, character 26)",
         "This should not return an error, just null/empty result"
      ]
   },
   {
      "send": {
         "request": {
            "params": {
               "position": {
                  "line": 8,
                  "character": 26
               },
               "textDocument": {
                  "uri": "$URI{myproject.gpr}"
               }
            },
            "jsonrpc": "2.0",
            "id": 104,
            "method": "textDocument/definition"
         },
         "wait": [
            {
               "id": 104,
               "result": []
            }
         ]
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
