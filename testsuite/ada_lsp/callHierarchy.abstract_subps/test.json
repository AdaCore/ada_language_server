            "jsonrpc": "2.0",
            "method": "textDocument/didOpen",
            "params": {
               "textDocument": {
                  "uri": "$URI{p.ads}",
                  "languageId": "Ada",
                  "version": 0,
                  "text": "package P is\n   type Root is abstract tagged null record;\n\n   procedure Foo (R : Root) is abstract;\nend P;\n"
