[
   {
      "comment": [
         "Load a directory with an unique project with errors ",
         "and then load a project containing errors."
      ]
   },
   {
      "start": {
         "cmd": ["${ALS}"]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 1,
            "method": "initialize",
            "params": {
               "rootUri": "$URI{.}",
               "capabilities": {}
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized",
            "params": {}
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen",
            "params": {
               "textDocument": {
                  "uri": "$URI{main.adb}",
                  "languageId": "ada",
                  "version": 1,
                  "text": "procedure Main is\nbegin\n   null;\nend Main;\n"
               }
            }
         },
         "wait": [
            {
               "method": "textDocument/publishDiagnostics",
               "params": {
                  "uri": "$URI{main.adb}",
                  "diagnostics": [
                     {
                        "range": {
                           "start": { "line": 0, "character": 0 },
                           "end": { "line": 0, "character": 0 }
                        },
                        "severity": 1,
                        "source": "ada.project",
                        "message": "The project file has errors and could not be loaded.",
                        "relatedInformation": [
                           {
                              "location": {
                                 "uri": "$URI{test.gpr}",
                                 "range": {
                                    "start": {
                                       "line": 2,
                                       "character": 7
                                    },
                                    "end": {
                                       "line": 2,
                                       "character": 7
                                    }
                                 }
                              },
                              "message": "undefined attribute \"Foo\""
                           }
                        ]
                     }
                  ]
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 2,
            "method": "workspace/executeCommand",
            "params": {
               "command": "als-project-file",
               "arguments": [{}]
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "id": 2,
               "result": "$URI{test.gpr}"
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration",
            "params": {
               "settings": {
                  "ada": {
                     "projectFile": "$URI{not_visible_project/project_with_errors.gpr}"
                  }
               }
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "method": "textDocument/publishDiagnostics",
               "params": {
                  "uri": "$URI{main.adb}",
                  "diagnostics": [
                     {
                        "range": {
                           "start": { "line": 0, "character": 0 },
                           "end": { "line": 0, "character": 0 }
                        },
                        "severity": 1,
                        "source": "ada.project",
                        "message": "The project file has errors and could not be loaded.",
                        "relatedInformation": [
                           {
                              "location": {
                                 "uri": "$URI{not_visible_project/project_with_errors.gpr}",
                                 "range": {
                                    "start": {
                                       "line": 1,
                                       "character": 7
                                    },
                                    "end": {
                                       "line": 1,
                                       "character": 7
                                    }
                                 }
                              },
                              "message": "undefined attribute \"Bar\""
                           }
                        ]
                     }
                  ]
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 3,
            "method": "workspace/executeCommand",
            "params": {
               "command": "als-project-file",
               "arguments": [{}]
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "id": 3,
               "result": "$URI{not_visible_project/project_with_errors.gpr}"
            }
         ]
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
