[
   {
      "comment": [
         "test generate subprogram refactoring tool : check error message when incorrect SLOC provided in executeCommand request"
      ]
   },
   {
      "start": { "cmd": ["${ALS}"] }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 0,
            "method": "initialize",
            "params": {
               "processId": 59002,
               "locale": "en-gb",
               "rootPath": "$URI{.}",
               "rootUri": "$URI{.}",
               "capabilities": {
                  "workspace": {
                     "applyEdit": true,
                     "workspaceEdit": {
                        "documentChanges": true,
                        "resourceOperations": ["create", "rename", "delete"]
                     },
                     "executeCommand": {
                        "dynamicRegistration": true
                     }
                  },
                  "textDocument": {
                     "codeAction": {
                        "dynamicRegistration": true,
                        "codeActionLiteralSupport": {
                           "codeActionKind": {
                              "valueSet": [
                                 "<HAS>",
                                 "refactor",
                                 "refactor.rewrite"
                              ]
                           }
                        }
                     }
                  }
               }
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "id": 0,
               "result": {
                  "capabilities": {
                     "codeActionProvider": {
                        "codeActionKinds": ["<HAS>", "refactor.rewrite"]
                     },
                     "executeCommandProvider": {
                        "commands": [
                           "<HAS>",
                           "als-refactor-generate-subprogram-body"
                        ]
                     }
                  }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration",
            "params": {
               "settings": {
                  "ada": {
                     "trace": {
                        "server": "off"
                     },
                     "projectFile": "diagnostics.gpr",
                     "scenarioVariables": {},
                     "defaultCharset": "iso-8859-1",
                     "displayMethodAncestryOnNavigation": "usage_and_abstract_only",
                     "adaFileDiagnostics": true,
                     "useCompletionSnippets": false,
                     "renameInComments": false
                  }
               }
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "id": 1,
               "method": "window/workDoneProgress/create",
               "params": {
                  "token": "<ANY>"
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen",
            "params": {
               "textDocument": {
                  "uri": "$URI{main.adb}",
                  "languageId": "Ada",
                  "version": 0,
                  "text": "procedure Main is\n   procedure Unimplemented;\nbegin\n   null;\nend Main;\n"
               }
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 2,
            "method": "textDocument/codeAction",
            "params": {
               "textDocument": {
                  "uri": "$URI{main.adb}"
               },
               "range": {
                  "start": { "line": 1, "character": 4 },
                  "end": { "line": 1, "character": 4 }
               },
               "context": {
                  "diagnostics": []
               }
            }
         },
         "wait": [
            {
               "id": 2,
               "result": [
                  "<HAS>",
                  {
                     "title": "Generate Procedure Body",
                     "kind": "refactor.rewrite",
                     "command": {
                        "command": "als-refactor-generate-subprogram-body",
                        "title": "",
                        "arguments": [
                           {
                              "context_id": "$URI{diagnostics.gpr}",
                              "subp_start": {
                                 "uri": "$URI{main.adb}",
                                 "range": {
                                    "start": { "line": 1, "character": 3 },
                                    "end": { "line": 1, "character": 27 }
                                 }
                              }
                           }
                        ]
                     }
                  }
               ]
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 3,
            "method": "workspace/executeCommand",
            "params": {
               "arguments": [
                  {
                     "context_id": "$URI{diagnostics.gpr}",
                     "subp_start": {
                        "range": {
                           "start": { "line": 3, "character": 4 },
                           "end": { "line": 3, "character": 5 }
                        },
                        "uri": "$URI{main.adb}"
                     }
                  }
               ],
               "command": "als-refactor-generate-subprogram-body"
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "method": "textDocument/publishDiagnostics",
               "params": {
                  "diagnostics": [
                     "<HAS>",
                     {
                        "message": "Failed to execute the Generate Subprogram Body refactoring.",
                        "range": {
                           "start": {
                              "line": 3,
                              "character": 3
                           },
                           "end": {
                              "line": 3,
                              "character": 8
                           }
                        },
                        "relatedInformation": [
                           "<HAS>",
                           {
                              "message": "The target subprogram could not be resolved precisely."
                           }
                        ],
                        "severity": 1,
                        "source": "Ada"
                     }
                  ],
                  "uri": "$URI{main.adb}"
               }
            },
            {
               "jsonrpc": "2.0",
               "id": 3,
               "error": {
                  "message": "Failed to execute the Generate Subprogram Body refactoring."
               }
            }
         ]
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
