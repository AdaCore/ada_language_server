            "wait":[]
        }
    },  {
        "send": {
            "request": {
                "jsonrpc":"2.0",
                "method":"textDocument/didOpen",
                "params":{
                    "textDocument": {
                        "uri": "file://$FILE{source code/aaa.adb}",
                        "languageId": "ada",
                        "version": 1,
                        "text": "with Ada.Text_IO;\nprocedure Aaa is\nbegin\n   Ada.Text_IO.New_Line;\n   Aaa;\nend Aaa;\n"
