[
   {
      "comment": [
         "Generate Package Body should only be triggered on package declaration lines"
      ]
   },
   {
      "start": { "cmd": ["${ALS}"] }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 0,
            "method": "initialize",
            "params": {
               "initializationOptions": {
                  "ada": {
                     "projectFile": "default.gpr"
                  }
               },
               "processId": 59002,
               "rootPath": "${DIR}",
               "rootUri": "$URI{.}",
               "capabilities": {
                  "workspace": {
                     "applyEdit": true,
                     "workspaceEdit": {
                        "documentChanges": true,
                        "resourceOperations": ["create"]
                     },
                     "fileOperations": {
                        "didCreate": true
                     }
                  },
                  "textDocument": {
                     "codeAction": {
                        "codeActionLiteralSupport": {
                           "codeActionKind": {
                              "valueSet": ["refactor", "refactor.rewrite"]
                           }
                        }
                     }
                  }
               }
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "id": 0,
               "result": {
                  "capabilities": {
                     "textDocumentSync": 2,
                     "codeActionProvider": {
                        "codeActionKinds": ["<HAS>", "refactor.rewrite"]
                     },
                     "executeCommandProvider": {
                        "commands": [
                           "<HAS>",
                           "als-refactor-generate-package-body"
                        ]
                     },
                     "workspace": {
                        "fileOperations": {
                           "didCreate": {
                              "filters": [
                                 {
                                    "scheme": "file",
                                    "pattern": {
                                       "glob": "**/*.ad{a,s,b,c}",
                                       "matches": "file",
                                       "options": {
                                          "ignoreCase": true
                                       }
                                    }
                                 }
                              ]
                           }
                        }
                     }
                  }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration",
            "params": {
               "settings": {
                  "ada": {
                     "projectFile": "default.gpr",
                     "defaultCharset": "iso-8859-1",
                     "adaFileDiagnostics": true
                  }
               }
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "method": "$/progress",
               "params": {
                  "token": "<ANY>",
                  "value": { "kind": "end" }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen",
            "params": {
               "textDocument": {
                  "uri": "$URI{pkg.ads}",
                  "languageId": "Ada",
                  "text": "package Pkg is\n   type T is private;\n   procedure Print (Item : T);\nprivate\n   type T is (Some, Enum);\nend Pkg;"
               }
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 2,
            "method": "textDocument/codeAction",
            "params": {
               "textDocument": {
                  "uri": "$URI{pkg.ads}"
               },
               "range": {
                  "start": { "line": 1, "character": 8 },
                  "end": { "line": 1, "character": 8 }
               }
            }
         },
         "wait": [
            {
               "id": 2,
               "result": [
                  "<DOES_NOT_HAVE>",
                  {
                     "title": "Generate Package Body"
                  },
                  {
                     "title": "Update Package Body"
                  }
               ]
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 3,
            "method": "textDocument/codeAction",
            "params": {
               "textDocument": {
                  "uri": "$URI{pkg.ads}"
               },
               "range": {
                  "start": { "line": 2, "character": 0 },
                  "end": { "line": 2, "character": 0 }
               }
            }
         },
         "wait": [
            {
               "id": 3,
               "result": [
                  "<DOES_NOT_HAVE>",
                  {
                     "title": "Generate Package Body"
                  },
                  {
                     "title": "Update Package Body"
                  }
               ]
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 4,
            "method": "textDocument/codeAction",
            "params": {
               "textDocument": {
                  "uri": "$URI{pkg.ads}"
               },
               "range": {
                  "start": { "line": 3, "character": 0 },
                  "end": { "line": 3, "character": 0 }
               }
            }
         },
         "wait": [
            {
               "id": 4,
               "result": [
                  "<HAS>",
                  {
                     "title": "Generate Package Body",
                     "kind": "refactor.rewrite",
                     "command": {
                        "command": "als-refactor-generate-package-body",
                        "arguments": [
                           {
                              "context_id": "$URI{default.gpr}",
                              "body_path": "${DIR}${DIR_SEP}pkg.adb",
                              "spec_loc": {
                                 "uri": "$URI{pkg.ads}",
                                 "range": {
                                    "start": { "line": 0, "character": 0 },
                                    "end": { "line": 5, "character": 8 }
                                 }
                              }
                           }
                        ]
                     }
                  }
               ]
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 5,
            "method": "textDocument/codeAction",
            "params": {
               "textDocument": {
                  "uri": "$URI{pkg.ads}"
               },
               "range": {
                  "start": { "line": 4, "character": 5 },
                  "end": { "line": 4, "character": 5 }
               }
            }
         },
         "wait": [
            {
               "id": 5,
               "result": null
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 6,
            "method": "textDocument/codeAction",
            "params": {
               "textDocument": {
                  "uri": "$URI{pkg.ads}"
               },
               "range": {
                  "start": { "line": 5, "character": 0 },
                  "end": { "line": 5, "character": 0 }
               }
            }
         },
         "wait": [
            {
               "id": 6,
               "result": [
                  "<HAS>",
                  {
                     "title": "Generate Package Body",
                     "kind": "refactor.rewrite",
                     "command": {
                        "command": "als-refactor-generate-package-body",
                        "arguments": [
                           {
                              "context_id": "$URI{default.gpr}",
                              "body_path": "${DIR}${DIR_SEP}pkg.adb",
                              "spec_loc": {
                                 "uri": "$URI{pkg.ads}",
                                 "range": {
                                    "start": { "line": 0, "character": 0 },
                                    "end": { "line": 5, "character": 8 }
                                 }
                              }
                           }
                        ]
                     }
                  }
               ]
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 7,
            "method": "textDocument/codeAction",
            "params": {
               "textDocument": {
                  "uri": "$URI{pkg.ads}"
               },
               "range": {
                  "start": { "line": 5, "character": 5 },
                  "end": { "line": 5, "character": 5 }
               }
            }
         },
         "wait": [
            {
               "id": 7,
               "result": [
                  "<HAS>",
                  {
                     "title": "Generate Package Body",
                     "kind": "refactor.rewrite",
                     "command": {
                        "command": "als-refactor-generate-package-body",
                        "arguments": [
                           {
                              "context_id": "$URI{default.gpr}",
                              "body_path": "${DIR}${DIR_SEP}pkg.adb",
                              "spec_loc": {
                                 "uri": "$URI{pkg.ads}",
                                 "range": {
                                    "start": { "line": 0, "character": 0 },
                                    "end": { "line": 5, "character": 8 }
                                 }
                              }
                           }
                        ]
                     }
                  }
               ]
            }
         ]
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
