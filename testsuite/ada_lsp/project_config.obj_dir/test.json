[
   {
      "comment": [
         "This the als-object-dir command with a simple normal project ",
         "and a simple aggregate project."
      ]
   },
   {
      "start": {
         "cmd": ["${ALS}"]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 0,
            "method": "initialize",
            "params": {
               "processId": 1,
               "rootUri": "$URI{.}",
               "capabilities": {},
               "initializationOptions": {
                  "ada": {
                     "projectFile": "normal.gpr"
                  }
               }
            }
         },
         "wait": [
            {
               "id": 0,
               "result": {
                  "capabilities": {
                     "textDocumentSync": 2,
                     "definitionProvider": true
                  }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized",
            "params": {}
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 2,
            "method": "workspace/executeCommand",
            "params": {
               "command": "als-object-dir",
               "arguments": [{}]
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "id": 2,
               "result": "$FILE{obj}"
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration",
            "params": {
               "settings": {
                  "ada": {
                     "projectFile": "$URI{agg.gpr}"
                  }
               }
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 3,
            "method": "workspace/executeCommand",
            "params": {
               "command": "als-object-dir",
               "arguments": [{}]
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "id": 3,
               "result": ""
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": "shutdown",
            "method": "shutdown",
            "params": null
         },
         "wait": [{ "id": "shutdown", "result": null }]
      }
   },
   {
      "send": {
         "request": { "jsonrpc": "2.0", "method": "exit" },
         "wait": []
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
