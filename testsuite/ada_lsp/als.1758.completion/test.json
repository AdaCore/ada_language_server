[
   {
      "comment": [
         "test that we don't have exception on attribute completion"
      ]
   },
   {
      "start": {
         "cmd": [
            "${ALS}"
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 1,
            "method": "initialize",
            "params": {
               "processId": 35188,
               "rootPath": "$URI{.}",
               "rootUri": "$URI{.}",               
               "capabilities": {
                  "workspace": {
                     "applyEdit": true,
                     "workspaceEdit": {
                        "documentChanges": true,
                        "resourceOperations": [
                           "rename"
                        ]
                     }
                  },
                  "textDocument": {
                     "synchronization": {},
                     "completion": {
                        "dynamicRegistration": true,
                        "completionItem": {
                           "snippetSupport": false,
                           "documentationFormat": [
                              "plaintext",
                              "markdown"
                           ],
                           "resolveSupport": {
                              "properties": [
                                 "detail",
                                 "documentation"
                              ]
                           }
                        }
                     }
                  }
               }
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration",
            "params": {
               "settings": {
                  "ada": {
                     "projectFile": "$URI{default.gpr}",
                     "scenarioVariables": {},
                     "defaultCharset": "UTF-8",
                     "adaFileDiagnostics": false
                  }
               }
            }
         },
         "wait": [
            {
                "jsonrpc": "2.0",
                "method": "$/progress",
                "params": {
                  "token": "<ANY>",
                  "value": {
                    "kind": "end"
                  }
                }
            }         
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen",
            "params": {
               "textDocument": {
                  "uri": "$URI{main.adb}",
                  "languageId": "Ada",
                  "version": 0,
                  "text": "\nprocedure Main is\n\n   procedure Print (Str : String) is\n   begin\n      if Str\n   end Print;\n\nbegin\n   Print (\"A\");\nend Main;\n"
               }
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "textDocument/didChange",
            "params": {
               "textDocument": {
                  "uri": "$URI{main.adb}",
                  "version": 1
               },
               "contentChanges": [
                  {
                     "range": {
                        "start": {
                           "line": 5,
                           "character": 12
                        },
                        "end": {
                           "line": 5,
                           "character": 12
                        }
                     },
                     "text": "'"
                  }
               ]
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 7,
            "method": "textDocument/completion",
            "params": {
               "textDocument": {
                  "uri": "$URI{main.adb}"
               },
               "position": {
                  "line": 5,
                  "character": 13
               },
               "context": {
                  "triggerKind": 2
               }
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 18,
            "method": "shutdown"
         },
         "wait": [
            {
               "id": 18,
               "result": null
            }
         ]
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
