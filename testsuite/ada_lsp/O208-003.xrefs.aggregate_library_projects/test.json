[
   {
      "comment": [
         "test that textDocument/definition works well with aggregated library projects"
      ]
   },
   {
      "start": {
         "cmd": [
            "${ALS}"
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "processId": 11435,
               "capabilities": {
                  "workspace": {
                     "applyEdit": false
                  }
               },
               "rootUri": "$URI{.}"
            },
            "jsonrpc": "2.0",
            "id": 1,
            "method": "initialize"
         },
         "wait": [
            {
               "id": 1,
               "result": {
                  "capabilities": {
                     "typeDefinitionProvider": true,
                     "hoverProvider": true,
                     "definitionProvider": true,
                     "renameProvider": {},
                     "referencesProvider": true,
                     "textDocumentSync": 2,
                     "completionProvider": {
                        "triggerCharacters": [
                            ".",
                            ",",
                            "'",
                            "("
                        ],
                        "resolveProvider": true
                     },
                     "documentSymbolProvider": true
                  }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "settings": {
                  "ada": {
                     "projectFile": "root.gpr",
                     "scenarioVariables": {},
                     "enableDiagnostics": false,
                     "defaultCharset": "ISO-8859-1"
                  }
               }
            },
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration"
         },
         "wait": [
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "text": "with Sublib; use Sublib;\nprocedure Main is\nbegin\n   Sublib.Do_Nothing;\nend Main;\n",
                  "version": 0,
                  "uri": "$URI{src/main.adb}",
                  "languageId": "Ada"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen"
         },
         "wait": [
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "position": {
                  "line": 3,
                  "character": 10
               },
               "textDocument": {
                  "uri": "$URI{src/main.adb}"
               }
            },
            "jsonrpc": "2.0",
            "id": 2,
            "method": "textDocument/definition"
         },
         "wait": [
            {
               "id": 2,
               "result": [
                  {
                     "range": {
                        "start": {
                           "line": 1,
                           "character": 13
                        },
                        "end": {
                           "line": 1,
                           "character": 23
                        }
                     },
                     "uri": "$URI{srclib/sublib.ads}"
                  }
               ]
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "text": "package Sublib is\n   procedure Do_Nothing;\nend Sublib;\n",
                  "version": 0,
                  "uri": "$URI{srclib/sublib.ads}",
                  "languageId": "Ada"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen"
         },
         "wait": [
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "position": {
                  "line": 1,
                  "character": 13
               },
               "textDocument": {
                  "uri": "$URI{srclib/sublib.ads}"
               }
            },
            "jsonrpc": "2.0",
            "id": 4,
            "method": "textDocument/definition"
         },
         "wait": [
            {
               "id": 4,
               "result": [
                  {
                     "range": {
                        "start": {
                           "line": 1,
                           "character": 13
                        },
                        "end": {
                           "line": 1,
                           "character": 23
                        }
                     },
                     "uri": "$URI{srclib/sublib.adb}"
                  }
               ]
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "text": "package body Sublib is\n   procedure Do_Nothing is\n   begin\n      null;\n   end Do_Nothing;\nend Sublib;\n",
                  "version": 0,
                  "uri": "$URI{srclib/sublib.adb}",
                  "languageId": "Ada"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen"
         },
         "wait": [
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "uri": "$URI{src/main.adb}"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didClose"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "uri": "$URI{srclib/sublib.ads}"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didClose"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "uri": "$URI{srclib/sublib.adb}"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didClose"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 5,
            "method": "shutdown"
         },
         "wait": [
            {
               "id": 5,
               "result": null
            }
         ]
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
