[
   {
      "comment": [
         "This test checks that diagnostics are correctly sent when ",
         "a refactoring fails, without overriding other diagnostics that ",
         "could be emitted by other sources (LAL, GPR2)."
      ]
   },
   {
      "start": {
         "cmd": ["${ALS}"]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 1,
            "method": "initialize",
            "params": {
               "processId": 2810652,
               "rootUri": "$URI{.}",
               "capabilities": {
                  "workspace": {
                     "applyEdit": true,
                     "workspaceEdit": {
                        "documentChanges": true,
                        "resourceOperations": ["rename"]
                     }
                  },
                  "textDocument": {
                     "synchronization": {},
                     "completion": {
                        "dynamicRegistration": true,
                        "completionItem": {
                           "snippetSupport": false,
                           "documentationFormat": ["plaintext", "markdown"],
                           "resolveSupport": {
                              "properties": ["detail", "documentation"]
                           }
                        }
                     }
                  }
               }
            }
         },
         "wait": [
            {
               "id": 1,
               "result": {
                  "capabilities": {
                     "executeCommandProvider": {
                        "commands": ["<HAS>", "als-refactor-add-parameters"]
                     }
                  }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration",
            "params": {
               "settings": {
                  "ada": {
                     "scenarioVariables": {},
                     "defaultCharset": "ISO-8859-1",
                     "enableDiagnostics": true,
                     "followSymlinks": false,
                     "documentationStyle": "gnat",
                     "foldComments": false
                  }
               }
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen",
            "params": {
               "textDocument": {
                  "uri": "$URI{test.ads}",
                  "languageId": "Ada",
                  "version": 0,
                  "text": "package Test is\n\n   type Parent is tagged record \n      Num : Integer;\n   end record\n   \n   function Value (Self : Parent) return Integer \n   is\n     (Self.Num);\n   \n   type Child is new Parent with null record;\n   \n   function Value (Self : Child) return Integer \n   is\n     (Self.Num);\n\nend Test;\n"
               }
            }
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 8,
            "method": "workspace/executeCommand",
            "params": {
               "arguments": [
                  {
                     "context_id": "$URI{default.gpr}",
                     "where": {
                        "uri": "$URI{test.ads}",
                        "range": {
                           "start": {
                              "line": 12,
                              "character": 15
                           },
                           "end": {
                              "line": 12,
                              "character": 15
                           }
                        }
                     },
                     "newParameter": "A : Integer",
                     "requiresFullSpecification": false
                  }
               ],
               "command": "als-refactor-add-parameters"
            }
         },
         "wait": [
            {
               "jsonrpc": "2.0",
               "method": "textDocument/publishDiagnostics",
               "params": {
                  "uri": "$URI{test.ads}",
                  "diagnostics": [
                     {
                        "range": {
                           "start": {
                              "line": 6,
                              "character": 3
                           },
                           "end": {
                              "line": 6,
                              "character": 11
                           }
                        },
                        "source": "libadalang",
                        "message": "Missing ';'"
                     },
                     {
                        "range": {
                           "start": {
                              "line": 0,
                              "character": 0
                           },
                           "end": {
                              "line": 0,
                              "character": 0
                           }
                        },
                        "severity": 4,
                        "source": "project",
                        "message": "Unique project in root directory was found and loaded, but it wasn't explicitly configured."
                     },
                     {
                        "message": "Failed to execute the Add Parameter refactoring.",
                        "range": {
                           "start": {
                              "line": 12,
                              "character": 3
                           },
                           "end": {
                              "line": 14,
                              "character": 16
                           }
                        },
                        "relatedInformation": [
                          {
                            "location": {
                               "range": {
                                  "start": {
                                     "line": 12,
                                     "character": 3
                                  },
                                  "end": {
                                     "line": 14,
                                     "character": 16
                                  }
                               },
                              "uri": "$URI{test.ads}"
                            },
                            "message": "Can't change the controlling parameter of a primitive"
                          }
                        ],
                        "severity": 1,
                        "source": "Ada"
                     }
                  ]
                }
             },
             {
               "error": {
                 "code": -32001,
                 "message": "Failed to execute the Add Parameter refactoring."
               },
               "id": 8,
               "jsonrpc": "2.0"
             }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 9,
            "method": "shutdown"
         },
         "wait": [
            {
               "id": 9,
               "result": null
            }
         ]
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
