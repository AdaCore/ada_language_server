[
   {
      "comment": [
         "This test checks that textDocument/rename works with underscores"
      ]
   },
   {
      "start": {
         "cmd": [
            "${ALS}"
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "processId": 13962,
               "capabilities": {
                  "workspace": {
                     "applyEdit": false
                  }
               },
               "rootUri": "$URI{.}"
            },
            "jsonrpc": "2.0",
            "id": 1,
            "method": "initialize"
         },
         "wait": [
            {
               "id": 1,
               "result": {
                  "capabilities": {
                     "typeDefinitionProvider": true,
                     "hoverProvider": true,
                     "definitionProvider": true,
                     "renameProvider": {},
                     "alsCalledByProvider": true,
                     "referencesProvider": true,
                     "textDocumentSync": 2,
                     "completionProvider": {
                        "triggerCharacters": [
                           "."
                        ],
                        "resolveProvider": false
                     },
                     "documentSymbolProvider": true
                  }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "settings": {
                  "ada": {
                     "projectFile": "default.gpr",
                     "scenarioVariables": {},
                     "enableDiagnostics": false,
                     "defaultCharset": "ISO-8859-1"
                  }
               }
            },
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "text": "with Ada.Text_IO; use Ada.Text_IO;\n\nprocedure Hi is\n   procedure Hello is\n   begin\n      Put_Line (\"Hello\");\n   end Hello;\nbegin\n   Hello;\nend Hi;\n",
                  "version": 0,
                  "uri": "$URI{hi.adb}",
                  "languageId": "Ada"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen"
         },
         "wait": [
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "newName": "Hello_1",
               "position": {
                  "line": 3,
                  "character": 13
               },
               "textDocument": {
                  "uri": "$URI{hi.adb}"
               }
            },
            "jsonrpc": "2.0",
            "id": 2,
            "method": "textDocument/rename"
         },
         "wait": [
            {
               "id": 2,
               "result": {
                  "changes": {
                     "$URI{hi.adb}": [
                        {
                           "newText": "Hello_1",
                           "range": {
                              "start": {
                                 "line": 6,
                                 "character": 7
                              },
                              "end": {
                                 "line": 6,
                                 "character": 12
                              }
                           }
                        },
                        {
                           "newText": "Hello_1",
                           "range": {
                              "start": {
                                 "line": 8,
                                 "character": 3
                              },
                              "end": {
                                 "line": 8,
                                 "character": 8
                              }
                           }
                        },
                        {
                           "newText": "Hello_1",
                           "range": {
                              "start": {
                                 "line": 3,
                                 "character": 13
                              },
                              "end": {
                                 "line": 3,
                                 "character": 18
                              }
                           }
                        }
                     ]
                  }
               }
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "contentChanges": [
                  {
                     "text": "with Ada.Text_IO; use Ada.Text_IO;\n\nprocedure Hi is\n   procedure Hello is\n   begin\n      Put_Line (\"Hello\");\n   end Hello;\nbegin\n   ;\nend Hi;\n"
                  }
               ],
               "textDocument": {
                  "version": 1,
                  "uri": "$URI{hi.adb}"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didChange"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "contentChanges": [
                  {
                     "text": "with Ada.Text_IO; use Ada.Text_IO;\n\nprocedure Hi is\n   procedure Hello is\n   begin\n      Put_Line (\"Hello\");\n   end Hello;\nbegin\n   Hello_1;\nend Hi;\n"
                  }
               ],
               "textDocument": {
                  "version": 2,
