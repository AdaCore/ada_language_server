[
   {
      "comment": [
         "Test whether foldingRange works fine with all loop statements (while, for, loop)"
      ]
   },
   {
      "start": {
         "cmd": ["${ALS}"]
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "processId": 18560,
               "capabilities": {
                  "textDocument": {
                     "foldingRange": {
                        "lineFoldingOnly": true
                     }
                  }
               },
               "rootUri": "$URI{.}"
            },
            "jsonrpc": "2.0",
            "id": 1,
            "method": "initialize"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "method": "initialized"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "settings": {
                  "ada": {
                     "projectFile": "$URI{p.gpr}",
                     "scenarioVariables": {},
                     "adaFileDiagnostics": false,
                     "defaultCharset": "ISO-8859-1"
                  }
               }
            },
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "text": "procedure Main is\nbegin\n   for I in 1 .. 10 loop\n      while True loop\n         loop\n            exit when I > 5;\n            -- Inner loop body\n         end loop;\n      end loop;\n   end loop;\nend Main;\n",
                  "version": 0,
                  "uri": "$URI{main.adb}",
                  "languageId": "Ada"
               }
            },
            "jsonrpc": "2.0",
            "method": "textDocument/didOpen"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "settings": {
                  "ada": {
                     "foldComments": false
                  }
               }
            },
            "jsonrpc": "2.0",
            "method": "workspace/didChangeConfiguration"
         },
         "wait": []
      }
   },
   {
      "send": {
         "request": {
            "params": {
               "textDocument": {
                  "uri": "$URI{main.adb}"
               }
            },
            "jsonrpc": "2.0",
            "id": 3,
            "method": "textDocument/foldingRange"
         },
         "wait": [
            {
               "id": 3,
               "jsonrpc": "2.0",
               "result": [
                  {
                     "endLine": 10,
                     "kind": "region",
                     "startLine": 0
                  },
                  {
                     "endLine": 9,
                     "kind": "region",
                     "startLine": 2
                  },
                  {
                     "endLine": 8,
                     "kind": "region",
                     "startLine": 3
                  },
                  {
                     "endLine": 7,
                     "kind": "region",
                     "startLine": 4
                  }
               ]
            }
         ]
      }
   },
   {
      "send": {
         "request": {
            "jsonrpc": "2.0",
            "id": 4,
            "method": "shutdown"
         },
         "wait": []
      }
   },
   {
      "stop": {
         "exit_code": 0
      }
   }
]
