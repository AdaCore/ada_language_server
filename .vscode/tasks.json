{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Run tests",
         "type": "shell",
         "command": "make check",
         "problemMatcher": ["$ada"],
         "group": "test"
      },
      {
         "type": "npm",
         "script": "watch",
         "path": "integration/vscode/ada",
         "group": "build",
         "problemMatcher": [
            {
               "base": "$tsc-watch",
               "fileLocation": [
                  "relative",
                  "${workspaceFolder}/integration/vscode/ada"
               ]
            }
         ],
         "label": "npm: watch - integration/vscode/ada",
         "detail": "node ./node_modules/typescript/bin/tsc -watch",
         "isBackground": true
      },
      {
         "type": "ada",
         "command": "make",
         "args": ["GPRBUILD_CARGS=-cargs:ada -gnatef"],
         "problemMatcher": ["$ada"],
         "group": "build",
         "label": "ada: Build current project",
         "presentation": {
            "echo": true,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
         }
      }
   ]
}
