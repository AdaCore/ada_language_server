{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "ada",
            "configuration": {
               "kind": "buildProject",
               "projectFile": "${config:ada.projectFile}",
               "args": [
                  "-gargs",
                  "-q"
               ]
            },
            "problemMatcher": [
                "$ada"
            ],
            "group": "build",
            "label": "ada: Build project",
        }
    ]
}
