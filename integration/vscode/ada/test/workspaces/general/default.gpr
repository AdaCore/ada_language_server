project Default is

    Tools_Mains :=
     ("gnatpp.adb",
      "test.adb");

    for Source_Dirs use ("src/**");
    for Object_Dir use "obj";
    for Main use Tools_Mains;

    package Builder is
      for Executable ("gnatpp.adb") use "gnatpp";
      for Executable ("test.adb") use "test";
   end Builder;

   package Compiler is
      for Default_Switches ("Ada") use ("-g", "-O0");
   end Compiler;

end Default;
