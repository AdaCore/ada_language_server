{
    "env": {
        "browser": false,
        "node": true,
        "commonjs": true,
        "es6": true,
        "es2017": true,
        "es2020": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "project": "tsconfig.json"
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
        "out",
        "**/*.d.ts"
    ]
}
