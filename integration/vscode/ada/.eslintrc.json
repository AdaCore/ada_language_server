{
    "env": {
        "browser": false,
        "node": true,
        "commonjs": true,
        "es6": true,
        "es2017": true,
        "es2020": true,
        "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "project": "tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint/eslint-plugin",
        "eslint-plugin-tsdoc"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
        "out",
        "**/*.d.ts"
    ],
    "rules": {
        "tsdoc/syntax": "warn",
        "max-len": [
            "warn",
            {
                "code": 100,
                "ignoreUrls": true
            }
        ]
    }
}